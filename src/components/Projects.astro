                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center justify-center px-3 py-2 text-xs font-semibold text-center text-sky-700 bg-white transition border border-sky-700/60 rounded-md hover:bg-sky-300/30 md:text-sm"
