---
import { PROJECTS } from "../const";
---

<div
  class="grid gap-8 mb-6 lg:mb-16 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 max-w-6xl mx-auto"
>
  {
    PROJECTS.map((project, index) => {
      const num = `${index + 1}`.padStart(2, "0");

      return (
        <article class="relative items-center text-black rounded-sm bg-zinc-200 dark:bg-slate-100/5">
          <a
            href={`/${project.slug}`}
            class="group hover:scale-[1.02] block transition "
          >
            <span class="group-hover:scale-[1.7] transition-all group-hover:top-4 group-hover:left-6 opacity-70 group-hover:opacity-100 absolute top-2 left-2 text-2xl font-bold font-Argon gradient">
              #{num}
            </span>
            <img
              class="w-full rounded-md hover:rounded-sm overflow-hidden object-cover aspect-ratio"
              src={`./projects/${num}.webp`}
              alt={`captura de pantalla del proyecto ${project.title}`}
            />
          </a>

          <div class="p-5">
            <h2 class="text-4xl font-bold tracking-tight">
              <span class="text-neutral-800 dark:text-neutral-200">
                {project.title}
              </span>
            </h2>
            <p class="mt-3 mb-4 font-light text-neutral-700 dark:text-amber-50">
              {project.description}
            </p>

            <ul class="flex flex-wrap gap-2 mt-4 gap-4 px-2">
              <li>
                <a
                  href={`https://github.com/CrashLanXD/101-proyectos-javascript/tree/master/public/projects/${project.slug}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center justify-center px-3 py-2 text-xs font-semibold text-center  text-black dark:text-white bg-neutral-300 dark:bg-black/60 transition border border-black/60 rounded-md hover:bg-neutral-400 dark:hover:bg-zinc-900 md:text-sm"
                >
                  <svg
                    class="w-5 h-5 mr-1"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                    aria-hidden="true"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                      clip-rule="evenodd"
                    />
                  </svg>
                  Código
                </a>
              </li>
              <li>
                <a
                  href={`/${project.slug}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center justify-center px-3 py-2 text-xs font-semibold text-center text-amber-700 dark:text-amber-400 bg-[#d8d8d8] dark:bg-black/50 transition border border-amber-500 dark:border-orange-700/60 rounded-md hover:bg-yellow-300/10 md:text-sm"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="1.5"
                    stroke="currentColor"
                    class="w-5 h-5 mr-1"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M12 21a9.004 9.004 0 0 0 8.716-6.747M12 21a9.004 9.004 0 0 1-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 0 1 7.843 4.582M12 3a8.997 8.997 0 0 0-7.843 4.582m15.686 0A11.953 11.953 0 0 1 12 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0 1 21 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0 1 12 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 0 1 3 12c0-1.605.42-3.113 1.157-4.418"
                    />
                  </svg>
                  Demo
                </a>
              </li>
            </ul>
          </div>
        </article>
      );
    })
  }

  <article
    class="min-h-60 relative items-center text-black rounded-lg bg-neutral-300 dark:bg-slate-100/5"
  >
    <span
      class="group flex justify-center flex-col h-full items-center font-semibold text-orange-400 dark:text-orange-300 text-center text-xl"
      ><svg
        class="size-16 mb-2"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 576 512"
        fill="currentColor"
      >
        <path
          d="M208 64a48 48 0 1 1 96 0 48 48 0 1 1 -96 0zM9.8 214.8c5.1-12.2 19.1-18 31.4-12.9L60.7 210l22.9-38.1C99.9 144.6 129.3 128 161 128c51.4 0 97 32.9 113.3 81.7l34.6 103.7 79.3 33.1 34.2-45.6c6.4-8.5 16.6-13.3 27.2-12.8s20.3 6.4 25.8 15.5l96 160c5.9 9.9 6.1 22.2 .4 32.2s-16.3 16.2-27.8 16.2H288c-11.1 0-21.4-5.7-27.2-15.2s-6.4-21.2-1.4-31.1l16-32c5.4-10.8 16.5-17.7 28.6-17.7h32l22.5-30L22.8 246.2c-12.2-5.1-18-19.1-12.9-31.4zm82.8 91.8l112 48c11.8 5 19.4 16.6 19.4 29.4v96c0 17.7-14.3 32-32 32s-32-14.3-32-32V405.1l-60.6-26-37 111c-5.6 16.8-23.7 25.8-40.5 20.2S-3.9 486.6 1.6 469.9l48-144 11-33 32 13.7z"
        ></path></svg
      >
      Próximamente!
    </span>
  </article>
</div>

<style>
  a:hover {
    .gradient {
      background: linear-gradient(
        135deg,
        #161616,
        #121212,
        #000000,
        #181818,
        #252525,
        #434343,
        #181818,
        #000000
      );

      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-size: 300% 300%;
      animation: gradient 5s ease-in-out infinite;
    }
  }

  @keyframes gradient {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }
</style>
