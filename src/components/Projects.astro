---
import { PROJECTS } from "../const";
---

<div
  class="grid gap-8 mb-6 lg:mb-16 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 max-w-6xl mx-auto"
>
  {
    PROJECTS.map((project, index) => {
      const num = `${index + 1}`.padStart(2, "0");

      return (
        <article class="relative items-center text-black rounded-lg bg-slate-100/5">
          <a
            href={`/${project.slug}`}
            class="group hover:scale-110 block transition"
          >
            <span class="group-hover:scale-[2] transition-all group-hover:top-4 group-hover:left-6 opacity-70 group-hover:opacity-100 absolute top-2 left-2 text-2xl font-bold font-Argon">
              #{num}
            </span>
            <img
              class="w-full rounded-lg overflow-hidden object-cover aspect-ratio"
              src={`./projects/${num}.webp`}
              alt={`captura de pantalla del proyecto ${project.title}`}
            />
          </a>

          <div class="p-5">
            <h2 class="text-4xl font-bold tracking-tight text-slate-300">
              <a
                href={`/${project.slug}`}
                class="hover:text-amber-400 transition"
              >
                {project.title}
              </a>
            </h2>
            <p class="mt-3 mb-4 font-light text-amber-50">
              {project.description}
