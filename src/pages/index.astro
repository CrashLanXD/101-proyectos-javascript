---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import Header from "../components/AboutHeader.astro";
import Projects from "../components/Projects.astro";
import Footer from "../components/AboutFooter.astro";
import { Image } from "astro:assets";
import WorldIcon from "../components/icons/WorldIcon.astro";
---

<Layout title="101 proyectos de JavaScript - por @crashlanxd" defaultTheme="dark">
  <Header title="About" link="/about" />
  <Hero />
  <Projects />
  <Footer>
    <p class="text-sm flex justify-center items-center gap-1 mt-3">
      Una iniciativa de <a
        class="px-1 flex w-24 bg-white/90 rounded-full"
        href="https://midu.dev"
        target="_blank"
        rel="noopener noreferrer"
      >
        <Image
          src="/imgs/midu.webp"
          alt={"logo de midudev"}
          width={92}
          height={28}
        />
      </a>
      <a
        aria-label="100 proyectos de JavaScript - página web original por @midudev"
        title="100 proyectos de JavaScript - página web original por @midudev"
        href="https://www.javascript100.dev/"
        target="_blank"
        class="hover:text-[--r-yellow] transition-colors"
        rel="noopener noreferrer"
      >
        <WorldIcon class="size-6" />
      </a>
    </p>
  </Footer>
</Layout>

<style>
  body {
    background-color: light-dark(var(--r-white), var(--r-black));
    color: light-dark(var(--r-black), var(--r-white));

    transition: background 150ms;
    min-height: 100dvh;

    font-family: InterVariable;

    background-image: repeating-linear-gradient(
        to right,
        transparent 0 150px,
        light-dark(#00000008, #ffffff08) 150px 151px
      ),
      repeating-linear-gradient(
        to bottom,
        transparent 0 150px,
        light-dark(#00000008, #ffffff08) 150px 151px
      );
  }
</style>
